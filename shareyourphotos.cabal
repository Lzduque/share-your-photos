cabal-version: 2.2

name: shareyourphotos
version: 0.1.0.0

common common
  build-depends:
      base >= 4.14
  default-language: Haskell2010
  ghc-options: -Wall

library
  import: common
  hs-source-dirs: src
  exposed-modules: ShareYourPhotos
  build-depends:
    base >= 4.7 && < 5
    , scotty >= 0.12
    , http-types

  default-extensions:
    ImportQualifiedPost

executable shortener
  import: common
  hs-source-dirs: app
  main-is: Main.hs
  build-depends:
      shareyourphotos

{
  "manifest_version": 3,
  "name": "Haskell Communication Extension",
  "description": "This is a proof of concept | recieving information from the google chrome extension and filtering it, then sending it back.",
  "version": "1.0",
  "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage",
       "webRequest"
    ],
    "background": {
    "service_worker": "scripts/background.js"
    },
    "content_scripts": [
      {
        "js": ["scripts/content.js"],
        "matches": [
          "https://web.whatsapp.com/*"
        ]
      }
    ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}

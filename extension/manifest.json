{
  "manifest_version": 3,
  "name": "Haskell Communication Extension",
  "description": "This is a proof of concept | recieving information from the google chrome extension and filtering it, then sending it back.",
  "version": "1.0",
  "action": {
    "default_popup": "hello.html"
  },
  "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": { "16": "icon16.png",
          "48": "icon48.png",
          "128": "icon128.png" }
}
